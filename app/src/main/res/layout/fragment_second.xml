<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SecondFragment"
    android:background="@android:color/white">

    <TextView
        android:id="@+id/fragment_second_NomePais"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:textSize="50sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:textColor="@android:color/holo_red_light"
        tools:text="World" />

    <TextView
        android:id="@+id/fragment_second_UltimaAtualizacaoTexto"
        android:visibility="visible"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ultima atualização:"
        android:layout_marginTop="10dp"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="@+id/fragment_second_NomePais"
        app:layout_constraintTop_toBottomOf="@+id/fragment_second_NomePais"
        android:textColor="@android:color/holo_red_light"/>

    <TextView
        android:id="@+id/fragment_second_UltimaAtualizacaoDados"
        android:visibility="visible"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/fragment_second_UltimaAtualizacaoTexto"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/fragment_second_UltimaAtualizacaoTexto"
        tools:text="2022-08-19 21:10"
        android:textColor="@android:color/holo_red_light"/>

    <TextView
        android:id="@+id/fragment_second_CasosAtivosTexto"
        android:visibility="visible"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Casos ativos:"
        android:textSize="20dp"
        app:layout_constraintStart_toStartOf="@+id/fragment_second_UltimaAtualizacaoTexto"
        app:layout_constraintTop_toBottomOf="@+id/fragment_second_UltimaAtualizacaoTexto"
        android:textColor="@android:color/holo_red_light"/>

    <TextView
        android:id="@+id/fragment_second_CasosAtivosDados"
        android:visibility="visible"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/fragment_second_CasosAtivosTexto"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/fragment_second_CasosAtivosTexto"
        tools:text="+613,399"
        android:textColor="@android:color/holo_red_light"/>

    <TextView
        android:id="@+id/fragment_second_NovosCasosTexto"
        android:visibility="visible"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Novos casos:"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="@+id/fragment_second_CasosAtivosTexto"
        app:layout_constraintTop_toBottomOf="@+id/fragment_second_CasosAtivosTexto"
        android:textColor="@android:color/holo_red_light"/>

    <TextView
        android:id="@+id/fragment_second_NovosCasosDados"
        android:visibility="visible"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/fragment_second_NovosCasosTexto"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/fragment_second_NovosCasosTexto"
        tools:text="+625,727"
        android:textColor="@android:color/holo_red_light"/>

    <TextView
        android:id="@+id/fragment_second_NovasMortesTexto"
        android:visibility="visible"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Novas mortes:"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="@+id/fragment_second_NovosCasosTexto"
        app:layout_constraintTop_toBottomOf="@+id/fragment_second_NovosCasosTexto"
