        android:id="@+id/fragment_second_TotalDeCasosDados"
        android:visibility="visible"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/fragment_second_TotalDeCasosTexto"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/fragment_second_TotalDeCasosTexto"
        tools:text="599,321,245"
        android:textColor="@android:color/holo_red_light"/>

    <TextView
        android:id="@+id/fragment_second_TotalDeMortesTexto"
        android:visibility="visible"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Total de mortes:"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="@+id/fragment_second_TotalDeCasosTexto"
        app:layout_constraintTop_toBottomOf="@+id/fragment_second_TotalDeCasosTexto"
        android:textColor="@android:color/holo_red_light"/>

    <TextView
        android:id="@+id/fragment_second_TotalDeMortesDados"
        android:visibility="visible"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/fragment_second_TotalDeMortesTexto"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/fragment_second_TotalDeMortesTexto"
        tools:text="6,467,744"
        android:textColor="@android:color/holo_red_light"/>

    <TextView
        android:id="@+id/fragment_second_TotalDeRecuperadosTexto"
        android:visibility="visible"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Total de recuperados:"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="@+id/fragment_second_TotalDeMortesTexto"
        app:layout_constraintTop_toBottomOf="@+id/fragment_second_TotalDeMortesTexto"
        android:textColor="@android:color/holo_red_light"/>

    <TextView
        android:id="@+id/fragment_second_TotalDeRecuperadosDados"
        android:visibility="visible"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/fragment_second_TotalDeRecuperadosTexto"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/fragment_second_TotalDeRecuperadosTexto"
        tools:text="573,358,577"
        android:textColor="@android:color/holo_red_light"/>

</androidx.constraintlayout.widget.ConstraintLayout>